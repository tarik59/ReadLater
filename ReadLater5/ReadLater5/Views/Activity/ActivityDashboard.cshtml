@model Entity.DTOs.UserActivityDto
@{ var i = 1;;
}
<div class="container">

    <div class="row">
        <div class="col-md-3">
            <h3>Clicks per user</h3>
            <table class="table table-success">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Username</th>
                        <th>Activity</th>
                    </tr>
                </thead>
                <tbody>
                    @{ i = 1; ;
                    }
                    @foreach (var item in Model.userActivityStats)
                    {
                        <tr>
                            <td>@(i++)</td>
                            <td>@item.Username</td>
                            <td>@item.SumActivity</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-md-7">
            <h3>Most popular bookmarks</h3>
            <table class="table table-success">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Short Description</th>
                        <th>URL</th>
                        <th>Created</th>
                    </tr>
                </thead>
                <tbody>
                    @{ i = 1; ;
                    }
                    @foreach (var item in Model.mostPopularBookmarks)
                    {
                        <tr>
                            <td>@(i++)</td>
                            <td>@item.ShortDescription</td>
                            <td>@item.URL</td>
                            <td>@item.CreateDate</td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
